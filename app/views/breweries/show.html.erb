<p id="notice"><%= notice %></p>


<div class="container">
  <div class="jumbotron text-center">
    <h1><%= @brewery.name %></h1>
    <p><%= @brewery.address %></p>
    <p><%= @brewery.description %></p>
  </div>


  <div class="well text-center col-md-5">
    <h3>Nearby Breweries</h3>
    <ul>
      <% for brewery in @brewery.nearbys(10) %>
        <li><%= link_to brewery.name, brewery %> (<%= brewery.distance.round(2) %> miles)</li>
      <% end %>
    </ul>
  </div>

</div>
